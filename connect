#!/bin/zsh
# Start the Spring Boot backend using Maven

# Try to load local environment file
if [ -f .env.local ]; then
    echo "üìÑ Loading environment from .env.local"
    source .env.local
fi

# Load AWS credentials from environment or use these placeholders
export AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID:-YOUR_AWS_ACCESS_KEY_ID}"
export AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY:-YOUR_AWS_SECRET_ACCESS_KEY}"  
export AWS_REGION="${AWS_REGION:-ap-south-1}"

echo "üöÄ Starting Burnbox Backend..."
echo "üìç AWS Region: $AWS_REGION"
echo "üîë Using AWS Access Key: ${AWS_ACCESS_KEY_ID:0:8}..."

mvn spring-boot:run