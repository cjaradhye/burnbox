# Environment Variables Template
# Copy this to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=jdbc:postgresql://localhost:5432/burnbox
DATABASE_USERNAME=burnbox
DATABASE_PASSWORD=your_secure_db_password
DB_POOL_SIZE=20
DB_POOL_MIN=5

# ===========================================
# GOOGLE OAUTH2 CONFIGURATION
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-long-256-bit-secret-key-for-jwt-signing-make-it-secure-change-this-in-production
JWT_EXPIRATION=86400000

# ===========================================
# AWS CONFIGURATION
# ===========================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=burnbox-email-storage
AWS_SNS_TOPIC=arn:aws:sns:ap-south-1:123456789:burnbox-email-events

# ===========================================
# DYNAMODB CONFIGURATION
# ===========================================
DYNAMODB_ENDPOINT=
DYNAMODB_MAILBOX_TABLE=mailboxes
DYNAMODB_MESSAGE_TABLE=messages

# ===========================================
# KAFKA CONFIGURATION
# ===========================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ENABLED=true
KAFKA_GROUP_ID=burnbox-service

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
PORT=8080
BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
EMAIL_DOMAIN=nahneedpfft.com
LOG_LEVEL=INFO
LOG_FILE=/app/logs/burnbox.log

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,DELETE,PUT,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ===========================================
# SERVER CONFIGURATION
# ===========================================
SERVER_MAX_THREADS=200
SERVER_MIN_THREADS=10

# ===========================================
# WEBHOOK CONFIGURATION
# ===========================================
SES_WEBHOOK_VERIFY_SIGNATURE=true

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Uncomment and modify for production deployment
# SPRING_PROFILES_ACTIVE=prod
# DATABASE_URL=jdbc:postgresql://your-rds-endpoint:5432/burnbox
# BASE_URL=https://yourdomain.com
# FRONTEND_URL=https://your-frontend-domain.com
# JWT_SECRET=your-production-jwt-secret-256-bits-minimum
# LOG_LEVEL=WARN